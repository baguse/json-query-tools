{
  "name": "json-query-tools",
  "displayName": "JSON Tools: JavaScript Methods",
  "description": "VS Code JSON query editor, history, and in-panel results.",
  "version": "0.0.3",
  "icon": "images/icon.png",
  "publisher": "Baguse",
  "repository": {
    "type": "git",
    "url": "https://github.com/baguse/json-query-tools"
  },
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:jsonQueryTools.openHistory"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "jsonQueryTools.openHistory",
        "title": "JSON Tools: Open Query Editor"
      }
    ],
    "configuration": {
      "title": "JSON Tools",
      "properties": {
        "jsonQueryTools.ollamaEndpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "URL of the Ollama API"
        },
        "jsonQueryTools.aiProvider": {
          "type": "string",
          "enum": ["ollama", "gemini"],
          "default": "ollama",
          "description": "AI Provider to use for query generation"
        },
        "jsonQueryTools.aiApiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for cloud AI providers (e.g. Gemini)"
        },
        "jsonQueryTools.templateVariables": {
          "type": "object",
          "default": {},
          "description": "Custom template variables for expressions. Use {{variableName}} in your JS expression; values are substituted before evaluation. Built-ins: {{fileName}}, {{filePath}}, {{fileDir}}, {{workspaceFolder}}."
        }
      }
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --platform=node --external:vscode --outfile=out/extension.js --format=cjs --sourcemap",
    "watch": "npm run build -- --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "@types/vscode": "^1.93.0",
    "esbuild": "^0.25.9",
    "typescript": "^5.4.0",
    "vsce": "^2.15.0"
  }
}
